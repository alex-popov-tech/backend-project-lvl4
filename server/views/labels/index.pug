extends ../layouts/application.pug

block content
  table.table.table-striped
    +formFor()(action='/labels/new' )
      input(class='btn btn-primary' type='submit' value=t('labels.index.add'))
    thead
      tr
        th=t('labels.index.list.columns.name')
        th=t('labels.index.list.columns.action.name')
    tbody
      each label in data.labels
        tr
          td= label.name
          td
            +formFor()(action=`/labels/edit/${label.id}` )
              input(class='btn btn-primary' type='submit' value=t('labels.index.list.columns.action.edit'))
            +formFor()(action='/labels' method='post')
              input(name="_method" type="hidden" value="delete")
              input(name="id" type="hidden" value=label.id)
              +submit()(value=t('labels.index.list.columns.action.delete'))
