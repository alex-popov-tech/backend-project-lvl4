extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= 'Email'
        th= 'First name'
        th= 'Last name'
        if currentUser
          th= 'Action'
    tbody
      each user in data.users
        tr
          td= user.email
          td= user.firstName
          td= user.lastName
          if currentUser
            td
              +formFor()(action=`/users/edit` )
                input(class='btn btn-primary' type='submit' value='Edit')
              +formFor()(action='/users' method='post')
                input(name="_method" type="hidden" value="delete")
                input(name="id" type="hidden" value=user.id)
                +submit()(value='Delete')
